<h1 class="mt-5 mb-4"> <%= @restaurant.name %> </h1>
<div class="d-flex align-items-start">
  <div>
    <div class="card shadow-sm ms-3">
      <div class="card-body  restaurant-card">
        <h4 class="card-text"> <%= @restaurant.category %> </h4>
        <h4 class="card-text"><strong>Address: </strong> <%= @restaurant.address %> </h4>
        <h4 class="card-text"><strong>Tel: </strong> <%= @restaurant.phone_number %> </h4>
      </div>
    </div>
    <div class="d-flex">
      <%= link_to "Back", restaurants_path, class: "btn btn-primary ms-3 mt-4"%>
      <%= link_to "New Review", new_restaurant_review_path(@restaurant) , class: "btn btn-success ms-5 mt-4"%>
    </div>
  </div>
  <div class="ms-5 d-flex flex-wrap">
      <% @restaurant.reviews.each do |review| %>
        <div class="card shadow-sm mb-2 ms-2 review-card">
          <div class="card-body">
            <div class="d-flex row-wrap">
              <% review.rating.times do  %>
                <i class="fas fa-star"></i>
              <% end %>
              <% ( 5 - review.rating ).times do  %>
                <i class="far fa-star"></i>
              <% end %>
            </div>

            <p class="card-text"> <%= review.content %> </p>
          </div>

        </div>
      <% end %>
  </div>
</div>


