<h1>Restaurants</h1>

<% @restaurants.each do |restaurant| %>
  <div class="restaurant-container card shadow-sm">
    <div class="card-body">
      <h2 class="card-title"> <%= restaurant.name %> </h2>
      <p class="card-text"> <%= restaurant.category %> </p>
      <br>
      <p class="card-text"><strong>Address: </strong> <%= restaurant.address %> </p>
      <p class="card-text"><strong>Tel: </strong> <%= restaurant.phone_number %> </p>
    </div>
  <%= link_to '', restaurant_path(restaurant), class: 'restaurant-link'  %>
  </div>
<% end %>
