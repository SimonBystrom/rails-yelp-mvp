
<% if restaurant %>
  <%= simple_form_for(restaurant) do |f| %>
    <%= f.input :name, class: 'mb-2'%>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, collection: Restaurant::CATEGORIES, include_blank: false %>
    <%= f.submit 'Add', class: 'btn btn-primary mt-3' %>
  <% end %>
<% else %>
    <%= simple_form_for [@restaurant, review]  do |f| %>
      <%= f.input :content, class: 'mb-2'%>
      <%= f.input :rating %>
      <%= f.submit 'Add', class: 'btn btn-primary mt-3' %>
    <% end %>
<% end %>

